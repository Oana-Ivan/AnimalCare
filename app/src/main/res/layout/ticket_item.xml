<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="15dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@color/color_schema_background_2_transparent"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ticket_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/ticket_title"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/ticket_item_volunteer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/volunteer_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/ticket_item_text_row_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/ticket_text"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/ticket_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/status"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/ticket_item_change_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@string/set_status_as_close"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_schema_main" />
    </LinearLayout>
</androidx.cardview.widget.CardView>