<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_2"
    tools:context=".adminAndVolunteerOptions.ShelterManagementActivity">

    <TextView
        android:id="@+id/activity_shelter_management_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/color_schema_main"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/shelter_management"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <LinearLayout
        android:id="@+id/activity_shelter_management_ll_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@color/color_schema_background_2_transparent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_shelter_management_tv"
        app:layout_constraintVertical_bias="0.2">

        <TextView
            android:id="@+id/activity_shelter_management_tv_number_of_volunteers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/number_of_volunteers" />
        <TextView
            android:id="@+id/activity_shelter_management_tv_number_of_animals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/color_schema_main"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="@string/number_of_animals" />
        <TextView
            android:id="@+id/activity_shelter_management_tv_number_of_adopters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/number_of_adopters" />
        <TextView
            android:id="@+id/activity_shelter_management_tv_number_of_visits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color_schema_main"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="@string/number_of_visits" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_shelter_management_ll_tickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_shelter_management_ll_details">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_shelter_management_btn_add_ticket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_light"
            android:gravity="center"
            android:text="@string/add_ticket"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_shelter_management_btn_view_tickets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_light"
            android:gravity="center"
            android:text="@string/view_tickets"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>