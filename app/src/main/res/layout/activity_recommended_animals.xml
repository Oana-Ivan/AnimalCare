<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_schema_background_2"
    tools:context=".adopterOptions.recommendedAnimals.RecommendedAnimalsActivity">

    <TextView
        android:id="@+id/activity_recommended_animals_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/color_schema_light_transparent"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/recommended_animals"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/activity_recommended_animals_fr"
        android:name="com.example.animalcare.adopterOptions.recommendedAnimals.RecommendedAnimalsMainFragment"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_recommended_animals_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>