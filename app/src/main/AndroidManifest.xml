<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.animalcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/logo_animal_care"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/logo_animal_care"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnimalCare">
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.AnimalCareActionBar" />
        <activity android:name=".CRUD.AddAnimalActivity" />
        <activity android:name=".CRUD.AnimalsListActivity" />
        <activity android:name=".CRUD.AddVolunteerActivity" />
        <activity android:name=".CRUD.VolunteersListActivity" />
        <activity android:name=".usersMainScreens.VolunteerHomeActivity" />
        <activity android:name=".usersMainScreens.AdminHomeActivity" />
        <activity android:name=".usersMainScreens.AdopterHomeActivity" />
        <activity android:name=".authentication.LoginAdminActivity" />
        <activity android:name=".authentication.RegisterActivity" />
        <activity android:name=".authentication.LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>